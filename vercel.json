{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*\\.(css|js|html|txt|ico|png|jpg|jpeg|gif|svg))$",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/server.js"
    }
  ]
}
